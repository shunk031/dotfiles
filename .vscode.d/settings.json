{
    "editor.autoClosingQuotes": "always",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.cursorStyle": "block",
    // "editor.cursorSmoothCaretAnimation": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.formatOnType": true,
    "editor.tabCompletion": "on",
    "files.exclude": {
        "**/dataset/**/*.{png,zip,jpg,npz}": true,
    },
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/dataset/**/*.{png,zip,jpg,npz}": true,
    },
    "remote.containers.defaultExtensions": [
        "christian-kohler.path-intellisense",
        "davidhouchin.whitespace-plus",
        "ms-python.python",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "kimgronqvist.vscode-ido",
    ],
    "pangu.auto_space_on_save": true,
    "pangu.auto_space_on_save_ext": [],
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.jediEnabled": false,
    "python.linting.flake8Args": [
        "--ignore=E501,W503"
    ],
    "python.sortImports.args": [
        "-m 3"
    ],
    "telemetry.enableTelemetry": false,
    "window.zoomLevel": 0,
    "window.title": "${folderPath}${separator}${activeEditorLong}${separator}${rootName}",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.value": 100,
    "workbench.colorTheme": "Solarized Dark+",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#FFFF00",
    },
    "workbench.activityBar.visible": true,
    "terminal.external.osxExec": "Terminal.app",
    "shellcheck.disableVersionCheck": true,
    "[python]": {
        "editor.formatOnPaste": false
    },
    "vsicons.dontShowNewVersionMessage": true,
    "emacs-mcx.useMetaPrefixEscape": true,
}
